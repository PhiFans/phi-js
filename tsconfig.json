{
  "compilerOptions": {
    "lib": [ "es6" ],
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src" ],
  "exclude": [ "mode_modules", "**/__tests__/*" ]
}
